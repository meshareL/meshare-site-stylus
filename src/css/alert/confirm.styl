// Vue confirm

.confirm
    .confirm-body
        position fixed
        top 30%
        left 50%
        min-width 300px
        text-align center
        font-size $body-font-size
        color $text-gray-dark
        background-color $bg-white
        border $border-width $border-style $gray-300
        border-radius $border-radius
        box-shadow 0 0 18px rgba(black, .4)
        transform translateX(-50%)
        z-index 999
        transition opacity .5s

        .confirm-header
            padding 12px
            font-weight $font-weight-bold
            background-color $bg-gray
            border-bottom $border-width $border-style $gray-300
        .confirm-content
            padding 14px
            text-align center
            border-bottom $border-width $border-style $gray-300
        .confirm-footer
            padding 12px

    .confirm-back
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        background black
        opacity .7
        z-index 998