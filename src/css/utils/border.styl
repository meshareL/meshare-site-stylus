// border util
// 添加灰色边框
.border-x
    border-left $border !important
    border-right $border !important
.border-y
    border-top $border !important
    border-bottom: $border !important

// 更改边框渲染方式(虚线)
.border-dashed
    border-style dashed !important

$edges = {
    'top': top-left top-right,
    'right': top-right bottom-right,
    'bottom': bottom-left bottom-right,
    'left': top-left bottom-left
}

for $breakpoint, $variant in $responsive-variants
    +breakpoint($breakpoint)
        .border{$variant} { border: $border !important; }
        .border{$variant}-top { border-top: $border !important; }
        .border{$variant}-right { border-right: $border !important; }
        .border{$variant}-bottom { border-bottom: $border !important; }
        .border{$variant}-left { border-left: $border !important; }

        // 删除边框
        .border{$variant}-none { border: none !important; }
        .border{$variant}-top-none { border-top: none !important; }
        .border{$variant}-right-none { border-right: none !important; }
        .border{$variant}-bottom-none { border-bottom: none !important; }
        .border{$variant}-left-none { border-left: none !important; }

        // 边框添加圆角
        .rounded{$variant}-{0}, .border{$variant}-radius-{0} { border-radius: 0 !important; }
        .rounded{$variant}-{1}, .border{$variant}-radius-{1} { border-radius: $border-radius !important; }
        .rounded{$variant}-{2}, .border{$variant}-radius-{2} { border-radius: $border-radius * 2 !important; }

        for $edge, $corners in $edges
            .rounded{$variant}-{$edge}-{0}
            .border-radius{$variant}-{$edge}-{0}
                for $corner in $corners
                    border-{$corner}-radius 0 !important

            .rounded{$variant}-{$edge}-{1}
            .border-radius{$variant}-{$edge}-{1}
                for $corner in $corners
                    border-{$corner}-radius $border-radius !important

            .rounded{$variant}-{$edge}-{2}
            .border-radius{$variant}-{$edge}-{2}
                for $corner in $corners
                    border-{$corner}-radius $border-radius * 2 !important


// 添加一个半径为50%的边框,使之成为一个圆
.circle
    border-radius 50% !important

