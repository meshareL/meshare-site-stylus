// Base form controls
//
// Overrides for common inputs for easier styling.

fieldset
    padding 0
    margin 0
    border 0

label { font-weight: $font-weight-bold; }

.form-control,
.form-select
    vertical-align middle
    padding 6px $spacer-2
    border 1px solid $border-gray-dark
    border-radius 3px
    min-height 34px
    font-size $h4-size
    line-height 20px
    color $text-gray-dark
    background-color $bg-white
    background-repeat no-repeat // Repeat and position set for form states (success, error, etc)
    background-position right 8px center // For form validation. This keeps images 8px from right and centered vertically.
    outline none
    box-shadow $form-control-shadow
    &.focus,
    &:focus
        border-color $blue-400
        outline none
        box-shadow $form-control-shadow, $btn-input-focus-shadow

    // Ensures inputs don't zoom on mobile but are body-font size on desktop
    +breakpoint(md)
        font-size $body-font-size

// 输入框添加对比度,亮灰色背景
.input-contrast
    background-color $bg-gray-light
    &:focus { background-color: $bg-white; }

// 减小input输入框大小,使其匹配.minibutton
.input-sm
    min-height 28px
    padding-top 3px
    padding-bottom 3px
    font-size $font-size-small
    line-height 20px

// 加大input输入框大小
.input-lg
    padding $spacer-1 10px
    font-size $h4-size

.input-block
    display block
    width 100%

// input输入框使用等宽字体
.input-monospace
    font-family $mono-font

// 自定义input输入框占位符颜色 (WebKit only)
input::placeholder { color: $text-gray-light; }

// Hide the up/down buttons in <input type="number"> in the login form, the
// input is used for two-factor auth codes, type="number" makes it more usable
// on phones
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
    margin 0
    appearance none
