// 页眉
.nav-header
    color $text-white
    background-color $bg-gray-dark
    font-size $body-font-size
    line-height $body-line-height
    padding 14px 0

    .nav-link
        color $text-white
        font-weight $font-weight-bold
        letter-spacing 2px
        cursor pointer
        &:hover
            opacity .7
            text-decoration none

    // header搜索框
    .nav-search
        padding-left $spacer-2
        border none
        border-radius $border-radius
        width 300px
        min-height 30px
        font-size $body-font-size
        color $text-white
        background-color rgba($bg-white, 0.125)
        &:focus
            color $text-gray-dark
            background-color $bg-white
            outline none
            box-shadow none
        &::placeholder
            color $gray-400
            opacity .9

    // 新消息提示
    .notification-dot
        position absolute
        top 0
        right 5.5px
        width 10px
        height 10px
        transform translate(100%, -50%)
        border-radius 50%
        background-image linear-gradient($red-300, $red-500)

    .js-search-focus
        color $text-gray-dark
        background-color $bg-white
        outline none
        box-shadow none
