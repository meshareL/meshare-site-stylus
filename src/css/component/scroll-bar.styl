// 滚动条样式
.scroll-style
    &::-webkit-scrollbar
        width 6px
        background-color $gray-200
    &::-webkit-scrollbar-track
        shadow 0 0 0 $gray-500 inset
    &::-webkit-scrollbar-thumb
        background-color lighten($gray-400, 30%)
        border-radius $border-radius
        &:hover
            background-color $gray-400
        &:active
            background-color $gray-400

