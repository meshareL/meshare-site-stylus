// https://github.com/primer/css/blob/master/src/markdown/images.scss

.markdown-body
    img
        max-width 100%
        box-sizing content-box
        background-color $bg-white

        &[align=right]
            padding-left 20px
        &[align=left]
            padding-right 20px

    .emoji
        vertical-align text-top
        max-width none
        background-color transparent

    span.frame
        display block
        overflow hidden

        > span
            display block
            float left
            padding 7px
            margin 13px 0 0
            border 1px solid lighten($gray-300, 5%)
            overflow hidden
            width auto

        span img
            display block
            float left

        span span
            display block
            padding 5px 0 0
            clear both
            color $text-gray-dark

    span.align-center
        display block
        overflow hidden
        clear both

        > span
            display block
            margin 13px auto 0
            overflow hidden
            text-align center

        span img
            margin 0 auto
            text-align center

    span.align-right
        display block
        overflow hidden
        clear both

        > span
            display block
            margin 13px 0 0
            overflow hidden
            text-align right

        span img
            margin 0
            text-align right

    span.float-left
        display block
        float left
        margin-right 13px
        overflow hidden

        span
            margin 13px 0 0

    span.float-right
        display block
        float right
        margin-left 13px
        overflow hidden

        > span
            display block
            margin 13px auto 0
            overflow hidden
            text-align right
