.markdown-body
    ul, ol
        padding-left 2em
        &.no-list
            padding 0
            list-style none

    ul ul,
    ul ol,
    ol ol,
    ol ul,
        margin-top 0
        margin-bottom 0

    li { word-break: break-all; }

    li > p { margin-top: $spacer-3; }

    li + li { margin-top: $em-spacer-3; }

    dl
        padding 0

        dt
            padding 0
            margin-top $spacer-3
            font-size 1em
            font-style italic
            font-weight $font-weight-bold

        dd
            padding 0 $spacer-3
            margin-bottom $spacer-3
