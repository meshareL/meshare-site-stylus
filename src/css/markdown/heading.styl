.markdown-body
    h1, h2, h3, h4, h5, h6
        margin-top $spacer-4
        margin-bottom $spacer-3
        font-weight $font-weight-bold
        line-height $lh-condensed

        .octicon-link
            vertical-align middle
            visibility hidden
            color $black

        &:hover .anchor
            text-decoration none
            .octicon-link
                visibility visible

        tt, code
            font-size inherit

    h1
        padding-bottom .3em
        border-bottom 1px solid lighten($gray-200, 3%)
        font-size .2em

    h2
        padding-bottom .3em
        border-bottom 1px solid lighten($gray-200, 3%)
        font-size 1.5em

    h3
        font-size 1.25em

    h4
        font-size 1em

    h5
        font-size .875em

    h6
        font-size .85em
        color $gray-500
