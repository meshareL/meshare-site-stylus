.markdown-body .csv-data
    td, th
        padding 5px
        overflow hidden
        font-size $font-size-small
        line-height $lh-condensed-ultra
        text-align left
        white-space nowrap

    .blob-num
        padding 10px $spacer-2 9px
        border none
        text-align right
        background $bg-white

    tr { border-top: none; }

    th
        border-top none
        font-weight $font-weight-bold
        background $gray-100
